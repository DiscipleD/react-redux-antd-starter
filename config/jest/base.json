{
	"browser": true,
	"verbose": true,
	"testPathDirs": ["<rootDir>/src"],
	"moduleNameMapper": {
		"^common": "<rootDir>/src/common",
		"^components": "<rootDir>/src/components",
		"^containers": "<rootDir>/src/containers",
		"^actions": "<rootDir>/src/redux/actions",

		"^.+\\.(css|less|scss|sass)$": "<rootDir>/tests/mock/styleMock.js",
		"^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/tests/mock/fileMock.js"
	}
}
